{
  "name": "steamdeck-rom-manager",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:api": "nodemon -w src-app -w src-uploader --signal SIGTERM -e go,ts,tsx,css,html -x \"run-s clean:uploader build:api start:api\"",
    "build": "tsc && vite build",
    "build:uploader": "vite build src-uploader",
    "build:api": "npm run build:uploader && cd ./src-api && GOOS=linux go build -o ../src-tauri/binaries/api-x86_64-unknown-linux-gnu main.go",
    "clean:uploader": "rimraf src-api/upload/assets",
    "start:api": "cd src-api && go run *.go",
    "preview": "vite preview",
    "tauri": "tauri",
    "package": "npm run build:api"
  },
  "dependencies": {
    "@headlessui/react": "^1.6.6",
    "@tauri-apps/api": "^1.0.2",
    "clsx": "^1.2.1",
    "preact": "^10.9.0",
    "react-icons": "^4.4.0",
    "react-router-dom": "^6.3.0",
    "swr": "^1.3.0"
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.3.0",
    "@tauri-apps/cli": "^1.0.4",
    "@types/react-icons": "^3.0.0",
    "autoprefixer": "^10.4.7",
    "execa": "^6.1.0",
    "nodemon": "^2.0.19",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.1.12",
    "rimraf": "^3.0.2",
    "tailwindcss": "^3.1.6",
    "typescript": "^4.6.4",
    "vite": "^3.0.0"
  }
}
